{
	"parser": "@babel/eslint-parser",
	"extends": ["airbnb-base", "plugin:react/recommended"],
	"parserOptions": {
		"requireConfigFile": false,
    "ecmaFeatures": {
      "jsx": true
    },
		"ecmaVersion": 12
    // "sourceType": "module",
    
  },
	"plugins": [
    "react"
  ],
  	"env": {
    	"node": true,
    	"es6": true,
    	"browser": true
  	},
  	"rules": {
    	"no-console": "off",
    	"linebreak-style": 0,
    	"indent": [2, "tab"],
      "quotes": [2, "double", { "avoidEscape": true }],
      "no-tabs": 0,
      "no-plusplus": 0,
			"no-nested-ternary": 0,
      "prefer-template": 0,
      "react/prop-types": 0,
      "no-param-reassign": ["error", { "props": true, "ignorePropertyModificationsFor": ["data"] }],
      "prefer-destructuring": ["error", {"object": true, "array": false}],
			"no-mixed-spaces-and-tabs": 0
  	},
		"settings": {
			"react": {
				"version": "detect"
			}
		},
  	"ignorePatterns": ["/node_modules/*", "/build/*", "/public/*"],
}