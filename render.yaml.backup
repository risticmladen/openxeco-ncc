databases:
  - name: openxeco-db
    databaseName: openxeco
    plan: free

services:
  - type: web
    name: openxeco-api-simple
    runtime: docker
    plan: free
    dockerfilePath: .docker/Dockerfile.render-api
    envVars:
      - key: DB_HOSTNAME
        fromDatabase:
          name: openxeco-db
          property: host
      - key: DB_PORT
        fromDatabase:
          name: openxeco-db
          property: port
      - key: DB_NAME
        fromDatabase:
          name: openxeco-db
          property: database
      - key: DB_USERNAME
        fromDatabase:
          name: openxeco-db
          property: user
      - key: DB_PASSWORD
        fromDatabase:
          name: openxeco-db
          property: password
      - key: DB_DRIVER
        value: postgresql+psycopg2
      - key: ENVIRONMENT
        value: prod
      - key: JWT_SECRET_KEY
        generateValue: true
      - key: SECRET_KEY
        generateValue: true